<h3>{{ _('OctoAutoremote') }}</h3>
<p>See <a href="https://joaoapps.com/autoremote/personal/" target=_new>AutoApps/AutoRemote</a> for details on setting up Autoremote and getting your
<code> personal key</code>.</p>

<form class="form-horizontal">
    <div class="row-fluid">
	<div class="span3"><h4>Autoremote Key</h4></div>
	<div class="span4">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.OctoAutoremote.autoremotekey">
        </div>
    </div>
    <div><hr></div>
    <div class="row-fluid">
        <div class="span3"><h4>Event</h4></div>
        <div class="span1"><h4>Enable</h4></div>
    </div>

    {% 
    set printerevents = ["Connecting"
		,"Connected"
		,"Disconnecting"
		,"Disconnected"
		,"Error"]
    set printingevents = ["PrintStarted"
		,"PrintFailed"
		,"PrintCancelling"
		,"PrintCancelled"
		,"PrintPaused"
		,"PrintResumed"
		,"PrintDone"]
    set timelapseevents = ["MovieRendering"
		,"MovieDone"
		,"MovieFailed"]
    set serverevents = ["Startup"
		,"Shutdown"
		,"ClientOpened"
		,"ClientClosed"]
    %}
    
    <h2>Printing Events</h2>
    {% for event in printingevents %}
    <div class="octoautoremote_config_group">
        <div class="span3">{{event}}</div>
        <div class="span1 control-group" title="Enable or disable this notification">
          <input type="checkbox" data-bind="checked: settings.plugins.OctoAutoremote.events.{{ event }}">
        </div>
    </div>
    {% endfor %}

    <h2>Printer Events</h2>
    {% for event in printerevents %}
    <div class="octoautoremote_config_group">
        <div class="span3">{{event}}</div>
        <div class="span1 control-group" title="Enable or disable this notification">
          <input type="checkbox" data-bind="checked: settings.plugins.OctoAutoremote.events.{{ event }}">
        </div>
    </div>
    {% endfor %}

    <h2>Server Events</h2>
    {% for event in serverevents %}
    <div class="octoautoremote_config_group">
        <div class="span3">{{event}}</div>
        <div class="span1 control-group" title="Enable or disable this notification">
          <input type="checkbox" data-bind="checked: settings.plugins.OctoAutoremote.events.{{ event }}">
        </div>
    </div>
    {% endfor %}

    <h2>TimeLapse Events</h2>
    {% for event in timelapseevents %}
    <div class="octoautoremote_config_group">
        <div class="span3">{{event}}</div>
        <div class="span1 control-group" title="Enable or disable this notification">
          <input type="checkbox" data-bind="checked: settings.plugins.OctoAutoremote.events.{{ event }}">
        </div>
    </div>
    {% endfor %}

</form>
